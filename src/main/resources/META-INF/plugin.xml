<idea-plugin>
    <id>org.company.ForMat-Intellij-Plugin</id>
    <name>ForMat</name>
    <vendor>DontKnowers</vendor>

    <description><![CDATA[
        A plugin, which provides opportunity to format code in selected fragment or file.
    ]]></description>

    <depends>com.intellij.modules.platform</depends>

    <actions>
        <group id="com.plugin.actions.DefaultGroups" text="ForMat" popup="true">
            <add-to-group group-id="MainMenu" anchor="last"/>
            <action id="com.plugin.frontend.actions.FormatFileAction"
                    class="com.plugin.frontend.actions.FormatFileAction"
                    text="Format current file"/>
            <action id="com.plugin.frontend.actions.FormatAreaAction"
                    class="com.plugin.frontend.actions.FormatAreaAction"
                    text="Format selected area"/>
        </group>
    </actions>
</idea-plugin>